<!DOCTYPE html>
<html>
  <head>
    <title>Oor</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="sidebar two_columns">
      <nav>
	<ul>
	  <li><%= link_to "New post", new_post_path %></li>
	</ul>
      </nav>
    </div>
    <% flash.each do |name, msg| %>
    <div><%= msg %></div>
    <% end %>
    <div class="main two_columns">
      <%= yield %>
      The blog is <%= @blog.object_id %>
    </div>
  </body>
</html>
